{
    "name": "pr3-kanban-board",
    "private": true,
    "version": "0.1.1-beta",
    "type": "module",
    "main": "dist-electron/electron-main.js",
    "author": {
        "email": "anirudhasj441@gmail.com",
        "name": "Coding Devil",
        "url": "https://www.codingdevil.in"
    },
    "scripts": {
        "dev": "vite",
        "start": "vite",
        "build": "tsc && vite build",
        "build:linux": "npm run build && electron-builder --linux",
        "build:win": "npm run build && electron-builder --win --x64",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "build": {
        "productName": "Kanban Board",
        "directories": {
            "output": "./dist/electron/"
        },
        "linux": {
            "target": "deb",
            "icon": "./src/assets/icons/kanbanboard.svg",
            "category": "utilities"
        },
        "win": {
            "icon": "./src/assets/icons/kanbanboard.png"
        }
    },
    "preload": {
        "ts": "./src-electron/electron-preload.ts"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@lexical/react": "^0.14.2",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-scroll-area": "^1.0.5",
        "@radix-ui/react-separator": "^1.0.3",
        "@radix-ui/themes": "^2.0.3",
        "electron-is-dev": "^3.0.1",
        "lexical": "^0.14.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-loading-skeleton": "^3.4.0",
        "react-router-dom": "^6.22.2",
        "react-splitter-layout": "^4.0.0",
        "sass": "^1.71.1",
        "uuid": "^9.0.1",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@iconify-icon/react": "^2.0.1",
        "@types/react": "^18.2.56",
        "@types/react-dom": "^18.2.19",
        "@types/react-splitter-layout": "^3.0.5",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "electron": "^29.1.0",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "eslint-plugin-electron": "^7.0.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "vite-plugin-electron": "^0.28.2"
    }
}
